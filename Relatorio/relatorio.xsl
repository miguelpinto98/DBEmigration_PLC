            <body>
                <xsl:apply-templates select="//front-matter"/>
                <address>Generated by </address>
                <hr/>
            </body>
        </html>
    </xsl:template>
    
    <xsl:template match="front-matter">
        <div class="col-xs-12">
            <xsl:apply-templates select="meta"/>
        </div>
    </xsl:template>
            
    <xsl:template match="meta">
        <div class="col-xs-10">
            <xsl:value-of select="."/>
        </div>
    </xsl:template>
        
    <xsl:template match="//body">
        <div class="col-xs-12">
            <xsl:apply-templates/>
        </div>
    </xsl:template>
        
    <xsl:template match="//back-matter">
        <div class="col-xs-12">
            <xsl:apply-templates/>
        </div>
    </xsl:template>
    
    <xsl:template match="text()" priority="-1"/>
    
