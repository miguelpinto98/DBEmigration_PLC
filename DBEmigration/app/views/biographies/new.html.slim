#content-header.mini
  h1 Biografias

#breadcrumb
  = link_to home_path, title: 'Voltar à página inicial', class: 'tip-bottom'
    i.fa.fa-home
    | Home
  = link_to bio_path, title: 'Voltar aos registos biográficos', class: 'tip-bottom'
    i.fa.fa-home
    | Biografias
  a.current
    | Adicionar

.container-fluid


  - if flash[:notice]
    .row
      .col-xs-12
        .alert.alert-danger
          button.close data-dismiss="alert"  ×
          strong.notice #{flash[:notice]}

  .row
    .col-xs-12
      .widget-box
        .widget-title
          span.icon
            i.fa.fa-align-justify
          h5 Carregar Ficheiro XML

        .widget-content.nopadding

          == render 'form'

  br

  .row
    .col-xs-12
      = link_to 'Retroceder', biographies_path, class: 'btn btn-default btn-xs'

